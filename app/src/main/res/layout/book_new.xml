<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="300dp"
    android:layout_height="350dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_gravity="center">
    <androidx.cardview.widget.CardView
        android:id="@+id/card_new_book"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:cardCornerRadius="20dp"
        >
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/bg_new_book"

            >
            <EditText
                android:id="@+id/user_text"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginTop="20dp"
                android:layout_marginRight="15dp"
                android:layout_marginLeft="15dp"
                android:paddingLeft="15dp"
                android:hint="Введите название книги"
                android:background="#fff"
                />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/c1"
                android:layout_width="40dp"
                android:layout_height="45dp"
                android:layout_marginStart="50dp"
                android:layout_marginTop="-50dp"
                android:backgroundTint="@color/purple"
                app:cornerRadius="100px"
                app:icon="@android:drawable/ic_delete"
                app:iconGravity="textTop"
                app:iconPadding="0dp"
                app:iconSize="22dp"
                app:layout_constraintBottom_toTopOf="@id/add_book"

                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/user_text"
                app:layout_constraintVertical_bias="0.495" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/c2"
                app:cornerRadius="100px"
                app:icon="@android:drawable/ic_delete"
                app:iconPadding="0dp"
                app:iconGravity="textTop"
                app:iconSize="22dp"
                android:layout_width="40dp"
                android:layout_height="45dp"
                android:layout_marginTop="-50dp"
                app:layout_constraintStart_toEndOf="@id/c1"
                app:layout_constraintBottom_toTopOf="@id/add_book"
                app:layout_constraintTop_toBottomOf="@id/user_text"
                android:layout_marginLeft="40dp"
                android:backgroundTint="@color/green"

                />
            <com.google.android.material.button.MaterialButton
                android:id="@+id/c3"
                app:cornerRadius="100px"
                android:layout_width="40dp"
                android:layout_height="45dp"
                android:layout_marginTop="-50dp"
                app:icon="@android:drawable/ic_delete"
                app:iconPadding="0dp"
                app:iconGravity="textTop"
                app:iconSize="22dp"
                app:layout_constraintStart_toEndOf="@id/c2"
                app:layout_constraintBottom_toTopOf="@id/add_book"
                app:layout_constraintTop_toBottomOf="@id/user_text"
                android:layout_marginLeft="40dp"
                android:backgroundTint="@color/pink"

                />
            <com.google.android.material.button.MaterialButton
                android:id="@+id/c4"
                android:layout_width="40dp"
                android:layout_height="45dp"
                android:layout_marginStart="50dp"
                app:cornerRadius="100px"
                app:icon="@android:drawable/ic_delete"
                app:iconGravity="textTop"
                app:iconPadding="0dp"
                app:iconSize="22dp"
                app:layout_constraintBottom_toTopOf="@id/add_book"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/c1"
                app:layout_constraintVertical_bias="0.495"
                android:backgroundTint="@color/grey"

                />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/c5"
                app:cornerRadius="100px"
                app:icon="@android:drawable/ic_delete"
                app:iconPadding="0dp"
                app:iconGravity="textTop"
                app:iconSize="22dp"
                android:layout_width="40dp"
                android:layout_height="45dp"
                app:layout_constraintStart_toEndOf="@id/c4"
                app:layout_constraintBottom_toTopOf="@id/add_book"
                app:layout_constraintTop_toBottomOf="@id/c2"
                android:layout_marginLeft="40dp"
                android:backgroundTint="@color/red"

                />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/c6"
                app:cornerRadius="100px"
                app:icon="@android:drawable/ic_delete"
                app:iconPadding="0dp"
                app:iconGravity="textTop"
                app:iconSize="22dp"
                android:layout_width="40dp"
                android:layout_height="45dp"
                app:layout_constraintStart_toEndOf="@id/c5"
                app:layout_constraintBottom_toTopOf="@id/add_book"
                app:layout_constraintTop_toBottomOf="@id/c3"
                android:layout_marginLeft="40dp"
                android:backgroundTint="@color/brown"

                />
            <com.google.android.material.button.MaterialButton
                android:id="@+id/add_book"
                android:layout_width="180dp"
                android:layout_height="50dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginBottom="30dp"
                android:text="@string/add_book"
                android:textSize="20dp"


                />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>


</androidx.constraintlayout.widget.ConstraintLayout>